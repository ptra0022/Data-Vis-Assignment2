{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "National monthly road fatalities (counts).",
  "width": 950,
  "height": 320,
  "data": {"url": "data/monthly_state.csv", "format": {"type": "csv"}},
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "deaths", "as": "deaths"}],
      "groupby": ["year", "month"]
    },
    {
      "calculate": "toDate(datum.year + '-' + datum.month + '-01')",
      "as": "date"
    }
  ],
  "layer": [
    {
      "mark": {"type": "area", "color": "#1f77b4", "opacity": 0.15, "interpolate": "monotone"},
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "deaths", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "line", "strokeWidth": 2.5, "color": "#1f77b4", "interpolate": "monotone"},
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {
            "title": null,
            "format": "%Y",
            "tickCount": "year",
            "labelAngle": -30
          }
        },
        "y": {
          "field": "deaths",
          "type": "quantitative",
          "title": "Monthly fatalities (count)"
        }
      }
    },
    {
      "mark": {"type": "point", "size": 28, "filled": true, "color": "#1f77b4", "opacity": 0.8},
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "deaths", "type": "quantitative"},
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Month", "format": "%b %Y"},
          {"field": "deaths", "type": "quantitative", "title": "Deaths"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {
      "grid": true,
      "gridOpacity": 0.12,
      "domain": false,
      "labelFontSize": 12,
      "titleFontSize": 13
    }
  }
}
